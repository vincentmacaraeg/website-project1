<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SK Bulakan | About Us</title>
  <link rel="shortcut icon" href="../images/src/sk logo.png" type="png">
  <link rel="stylesheet" href="../stylesheets/reset.css">
  <link rel="stylesheet" href="../stylesheets/nav.css">
  <link rel="stylesheet" href="../stylesheets/aboutUs.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200..700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Libre+Franklin:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Host+Grotesk:ital,wght@0,300..800;1,300..800&family=Libre+Franklin:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
</head>
<body>
  <nav class="show">
    <%- include('templates/navigation') %>
  </nav>
  <main>
    <header>
      <img class="bgImg" src="../images/src/aboutUs header.jpg" alt="header bg">
      <img class="mainImg" src="../images/src/aboutUs header.jpg" alt="AboutUs header">
    </header>
    <section>
      <div class="cont">
        <div class="mainAbout">
          <div>
            <div class="left">
              <ul class="slideshowAbout">
                <li>
                  <img src="../images/src/1.jpg" alt="1">
                </li>
                <li>
                  <img src="../images/src/2.jpg" alt="2">
                </li>
                <li>
                  <img src="../images/src/3.jpg" alt="3">
                </li>
              </ul>
            </div>
          </div>
          <div class="right">
            <h1>Council Members</h1>
            <div class="councilMembers">
              <ul class="councilList">
                <% councilMembers.forEach((member, i) => { %>
                  <% if(i % 2 === 0){ %>
                    <li>
                      <img src="<%= member.Image%>" alt="council member">
                    </li>
                  <% } %>
                <% }); %>
              </ul>
              <ul class="councilList">
                <% councilMembers.forEach((member, i) => { %>
                  <% if(i % 2 === 1){ %>
                    <li>
                      <img src="<%= member.Image%>" alt="council member">
                    </li>
                  <% } %>
                <% }); %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>
    <footer>
      <%- include('templates/footer') %>
    </footer>
  </main>
  <script src="../javascripts/slider.js"></script>
  <script src="../javascripts/aboutUs.js"></script>
</body>
</html>